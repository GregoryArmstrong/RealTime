doctype html
html(lang="en")
  head
    title= pollName
    link(href='/style.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Raleway:400,600', rel='stylesheet', type='text/css')
  body
    h1 Poll Admin
    h2= pollName

    h3 Poll Status:
    #poll-active Active
    #connection-count
    #status-message

    #vote-tallies-header Vote Tallies:
    #vote-tallies-1
    #vote-tallies-2
    #vote-tallies-3
    #vote-tallies-4

    button(id='close-poll') Close Poll

    script(src="/socket.io/socket.io.js")
    script(src="/admin_client.js")
